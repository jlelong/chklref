prefix=@prefix@
PERL=@perl_path@
LATEX=@latex_path@
PDFLATEX=@pdflatex_path@

print_usage()
{
    echo  -e "usage: chklref [-d] [-q] [-p] file[.tex]";
    echo -e "\t-p : use pdflatex instead of latex";
    echo -e "\t-q : latex runs silently";
    echo -e "\t-d : debugging mode";
    echo -e "\t-h : displays this help";

}

out='/dev/stdout'
latex_cmd=$LATEX
debug=0
while getopts "pqhd" Option
do
    case $Option in
        p) latex_cmd=$PDFLATEX;;
        h) print_usage; exit 0;;
        q) out='/dev/null';;
        d) debug=1;;
        *) echo "illegal option"; print_usage; exit 0;;
    esac
done
shift $(($OPTIND - 1))

if [ $# -ne 1 ]; then
    print_usage; exit 0;
fi


basetexfile=$(basename $1 .tex)
echo "Running $latex_cmd on $basetexfile.tex to collect labels,"
echo "references and environment declarations"
$latex_cmd --interaction errorstopmode "${basetexfile}" > "$out" 2>&1
rm -- "$basetexfile".tex.chk
$latex_cmd --interaction errorstopmode --jobname "$basetexfile" \
    '\RequirePackage{chklref}\input' "{$basetexfile.tex}" &> $out
$PERL "$prefix"/share/chklref/chkparser "$basetexfile".tex.chk
[ $debug -ne 0 ] || rm -- "$basetexfile".tex.chk
