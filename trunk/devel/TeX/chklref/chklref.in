PERL=@perl_path@
LATEX=@latex_path@
DATAROOTDIR=@datarootdir@

print_usage()
{
    echo -e "usage: chklref [-q] file[.tex]";
    echo -e "\t-q : latex runs silently";
    echo -e "\t-h : displays this help";

}

out='/dev/stdout'
while getopts "qh" Option
do
    case $Option in
        h) print_usage; exit 0;;
        q) out='/dev/null';;
        *) echo "illegal option"; print_usage; exit 0;;
    esac
done
shift $(($OPTIND - 1))


basetexfile=$(basename $1 .tex)
echo "Running latex on $bastexfile.tex to collect labels,"
echo "references and environment declaration"
$LATEX --interaction errorstopmode --jobname "$basetexfile" \
    '\RequirePackage{chklref}\input' "{$basetexfile.tex}" &> $out
$PERL $DATAROOTDIR/chklref/chkparser $basetexfile.tex.chk
