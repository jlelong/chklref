INSTALL = @INSTALL@
PKGNAME = @PKGNAME@
TEXMFLOCAL = @TEXMFLOCAL@
prefix = @prefix@
installdir = @installdir@
bindir = @bindir@
datarootdir = @datarootdir@
binfiles = @binfiles@
distfiles = @distfiles@
sharefiles = @sharefiles@
texfiles = @texfiles@
texmf_prefix = $(TEXMFLOCAL)/tex/latex/$(PKGNAME)
mandir = @mandir@


VERSION=$(shell cat VERSION)

all::
	(cd man; make all)

install::
	(cd man; make install )
	mkdir -p ${bindir}
	$(INSTALL) -m 755 $(binfiles) $(bindir)
	mkdir -p $(datarootdir)/$(PKGNAME)
	$(INSTALL) -m 644 $(sharefiles) $(datarootdir)/$(PKGNAME)
	mkdir -p $(texmf_prefix)
	$(INSTALL) -m 644 $(texfiles) $(texmf_prefix)
	texhash $(TEXMFLOCAL)
	$(INSTALL) README $(mandir)/$(PKGNAME)/


uninstall::
	rm -f ${bindir}/chklref
	(cd man; make uninstall)


dist::
	rm -rf chklref-${VERSION}
	mkdir -p chklref-${VERSION}
	for file in ${distfiles}; do\
		mkdir -p `dirname $$file`;\
		cp --parent $$file chklref-${VERSION};\
	done
	tar cf - chklref-${VERSION} | gzip > chklref-${VERSION}.tar.gz
	rm -r chklref-${VERSION}

clean::
	(cd man; make clean)
