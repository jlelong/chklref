\xdef\currentfile{\jobname.tex}
\xdef\old@filename{\jobname.tex}

\def\push#1{\xdef\old@filename{{#1}\old@filename}} 
\def\pop{\expandafter\popit\old@filename\theend}
\def\popit#1#2\theend#3{\def#3{#1}\gdef\old@filename{#2}} 

\newwrite\chk@write
\immediate\openout\chk@write\jobname.tex.chk%
\def\chk@print#1{%
  \begingroup
    \set@display@protect
    \immediate\write\chk@write{#1}%
  \endgroup
}

\let\include@orig=\include
\def\include#1{%
  \push{\currentfile}%
  \xdef\currentfile{#1.tex}%
  \include@orig{#1}%
  \pop\@temp%
  \xdef\currentfile{\@temp}%
}

\AtBeginDocument{%
\let\input@orig\input
\def\input{\@ifnextchar\bgroup\@chk@iinput\@chk@@input}
\def\@chk@iinput#1{%
  \push{\currentfile}
  \xdef\currentfile{#1}
  \InputIfFileExists{#1}{}%
  {\filename@parse{#1}%
    \edef\reserved@a{\noexpand\@missingfileerror
      {\filename@area\filename@base}%
      {\ifx\filename@ext\relax tex\else\filename@ext\fi}}%
    \reserved@a}%
  \pop\@temp%
  \xdef\currentfile{\@temp}%
}
\def\@chk@@input#1 { %
  \push{\currentfile}%
  \xdef\currentfile{#1}%
  \input@orig #1%
   \pop\@temp%
  \xdef\currentfile{\@temp}%
}}


\let\begin@orig=\begin
\def\begin#1{%
    \chk@print{begin{#1} line \the\inputlineno\space file \currentfile}%
    \begin@orig{#1}%
}

\let\end@orig=\end
\def\end#1{%
   \chk@print{end{#1} line \the\inputlineno\space file \currentfile}%
   \end@orig{#1}%
}

